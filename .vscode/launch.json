    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "debug crypto",
            "cwd": "${workspaceFolder}",
            "args": [
                "-r", "ts-node/register",
                "-r", "source-map-support/register",
                "${workspaceFolder}/src/index.ts",
                "crypto",
                "--config",
                "${workspaceFolder}/config/crypto-sample.yaml"]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "debug current test",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": ["-r", "ts-node/register", "-r", "source-map-support/register", "${file}"]
        }
    ]
}
